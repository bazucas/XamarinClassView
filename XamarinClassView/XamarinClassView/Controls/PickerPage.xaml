<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinClassView.Controls.PickerPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker
                Title="TI Companies"
                TextColor="Blue"
                SelectedIndex="2"
                SelectedIndexChanged="ActionIndexChanged">
                <Picker.Items>
                    <x:String>Microsoft</x:String>
                    <x:String>Apple</x:String>
                    <x:String>Oracle</x:String>
                    <x:String>Tesla</x:String>
                    <x:String>SpaceX</x:String>
                </Picker.Items>
            </Picker>
            <!--<Picker BackgroundColor="Red"></Picker>
            <Picker>
                <Picker.BackgroundColor>Red</Picker.BackgroundColor>
            </Picker>-->
            <Label x:Name="Result" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>